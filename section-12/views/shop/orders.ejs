<body>
  <%- include('../includes/header.ejs') %>
  <main class="orders">
    <% if (orders.length <= 0) { %>
    <h1>Nothing there!</h1>
    <% } else { %>
      <ul class="order-list">
        <% orders.forEach(order => { %>
          <li class="order-item">
            <h1># <%= order._id %></h1>
            <ul>
              <% order.items.forEach(item => { %>
                <li><%= item.title %> (<%= item.quantity %>)</li>
              <% }) %>
            </ul>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>
